<div class="bg-color">
    <div class="bg-text">
        <p>We deliver organic vegetables, fruits and milk product</p> <br>
        <div class="input-group">
            <input class="form-control py-2 border-right-0 border" type="search" value="search"
                id="example-search-input">
            <span class="input-group-append">
                <button class="btn btn-outline-secondary border-left-0 border" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
        {{!-- <a href="#" class="btn btn-success ">More Read</a> --}}
    </div>
</div>
<div class="clear-fixed"></div>
<h3 class="text-center my-5 font-weight-bolder"> Our Product</h3>
<div class="container-fluid">
    <h7 class="header_name">Milk & Dairy Product</h7>
    <a class="moreviews" href="/product_view/1">More View</a>
    <div class="row mx-4">
        {{#each result}}
        <div class="card cardItem my-5 mx-2 h-100" style="width:17rem">
           <a href="/moreDetail/{{product_id}}"><img class="card-img-top card-item-image" src="/{{image}}" alt="Card image cap" height="150" width="42"> </a>
            <div class="card-body">
                <h7 class="card-title card-item-title">{{product_name}}(1kg)</h7>
                <p class="card-rate card-item-price">Rs {{price}}</p>
                <center>
                    <a id="add" class="btn btn-success shop-item-button text-white mb-3 bnt-font" style="cursor:pointer"
                        data-product_id="{{product_id}}">ADD TO CART</a>
                </center>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<div class="container-fluid" id="container-fluid">

</div>
<div class="container-fluid" id="container-fluids">

</div>

<h3 class="text-center my-4 font-weight-bolder"> Our Service</h3>
<div class="container-fluid ">
    <div class="row mx-3">
        {{#each result}}
        <div class="card my-5 mx-5 h-100" style="width:18rem">

            <img class="card-img-top" src="/{{image}}" alt="Card image cap" height="150" width="42">
            <div class="card-body">
                <h5 class="card-title">{{product_name}}(1kg)</h5>
                <p>Rs {{rate}}</p>
                <center>
                    <a href="#" class="btn btn-success">ADD TO CART</a>
                </center>

            </div>
        </div>
        {{/each}}
    </div>
</div>