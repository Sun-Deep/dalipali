<table class="table table-striped" id="myTable">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Phone</th>
      <th scope="col">Product</th>
      <th scope="col">Start Date</th>
      <th scope="col">End Date</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      {{#each results}}
        <tr>
            <td>{{fullname}}</td>
            <td>{{address}}</td>
            <td>{{phone}}</td>
            <td>{{product_name}}</td>
            <td>{{startdate}}</td>
            <td>{{enddate}}</td>
            <td>
                <a href="/subscription/acceptTrial/{{id}}" class="btn btn-primary btn-sm">Accept</a>
                <a href="/subscription/deleteTrial/{{id}}" class="btn btn-danger btn-sm">Delete</a>
                
            </td>
        </tr>
    {{/each}}
  </tbody>
</table>


<script>
    $(document).ready( function () {
        $('#myTable').DataTable();
    } );
</script>