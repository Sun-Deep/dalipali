{{#if msg}}
<div class="alert alert-success" id="success-alert">
    <button type="button" class="close" data-dismiss="alert">x</button>
    <strong>Success!</strong>
     {{msg}}
</div>

{{/if}}
<div class="card bg-light">
    <form class="card-body" action="/product/addCategory" method="post" id="bootstrapForm">
        <div class="form-group">
            <h5><label for="formGroupExampleInput">Add Category</label></h5>
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Vegetable" name="category"
                required>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary px-4" value="Add product">
        </div>

    </form>
</div>