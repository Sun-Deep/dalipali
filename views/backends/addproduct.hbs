{{#if msg}}
<div class="alert alert-success" id="success-alert">
    <button type="button" class="close" data-dismiss="alert">x</button>
    <strong>Success!</strong>
    {{msg}}
</div>
{{/if}}
<div class="card bg-light">
    <form class="card-body" action="/product" method="post" id="bootstrapForm" enctype="multipart/form-data">
        <div class="form-group">
            <h5><label for="formGroupExampleInput">Category_name</label></h5>
            <select class="custom-select" id="myFuction" name="category_id">
                <option selected>Choose...</option>
                {{#each result}}
                <option value="{{category_id}}">{{category_name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <h5><label for="formGroupExampleInput">Product_name</label></h5>
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Ghee" name="productname">
        </div>
        <div class="form-group">
            <h5><label for="formGroupExampleInput">Image</label></h5>
            <input type="file" name="image">
        </div>
        <div class="form-group">
            <h5><label for="formGroupExampleInput">Rate</label></h5>
            <input type="number" class="form-control" id="formGroupExampleInput" placeholder="900/kg" name="price">
        </div>
        <div class="form-group">
            <h5> <label for="formGroupExampleInput1">Status</label></h5>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="status" id="gridRadios1" value="1" checked>
                <label class="form-check-label" for="gridRadios1">
                    Active
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="status" id="gridRadios1" value="0">
                <label class="form-check-label" for="gridRadios1">
                    Inactive
                </label>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary px-4" value="Add product">
        </div>

    </form>
</div>